<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/tripInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/label"
            android:text="NEW TRIP AVAILABLE"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/date_and_time"
            android:layout_below="@+id/label"
            android:text="12/02/2019 2:30 PM"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/emptotal"
            android:layout_below="@+id/label"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/area"
            android:layout_below="@+id/date_and_time"
            android:text="Hebbal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pickordropLabel"
            android:layout_below="@+id/area"
            android:text="PICKUP"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pickordropAddress"
            android:layout_below="@+id/area"
            android:layout_toRightOf="@+id/pickordropLabel"
            android:text="Alti-Source"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_accept"
        android:layout_below="@id/tripInfo"
        android:text="ACCEPT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btn_notnow"
        android:layout_below="@id/tripInfo"
        android:text="NOT NOW"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>